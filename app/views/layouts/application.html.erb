<!DOCTYPE html>
<html>
<head>
  <title>Dream</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'autocomplete-rails.js' %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="top-bar-outer">
		<div id="top-bar-bg"></div>
		<div id="top-bar">
			<div class="top-bar-inside">
				<div class="session">
					<% if user_signed_in? %>
						<%= link_to current_user.name, current_user %> | 
						<%= link_to "Sign out", destroy_user_session_path %>
					<% else %>
						<%= link_to "Sign up", new_user_registration_path %> or  
						<%= link_to "Sign in", new_user_session_path %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div id="container">
		<div id="header">
			<%= tabs_tag(:builder => ApplicationHelper::NavTabBuilder, :open_tabs => { :class => "nav" }) do |tab| %>
			<%= tab.interesting 'Interesting', questions_path %>
			<%= tab.questions	'Questions',	questions_path %>
			<%= tab.messages 'Messages', messages_path %>
			<%= tab.topics	'Topics',	topics_path %>
			<%= tab.unanswered	'Unanswered',	questions_path %>
			<%= tab.ask			'Ask Question',	new_question_path, :style => "float:right" %>
			<% end %>
		</div>
		<div id="notify">
			<%= render 'partials/notify' if current_user %>
		</div>
		<%= yield %>
	</div>
</body>
</html>
