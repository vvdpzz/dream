<div class="user_left">
	<div class="gravatar">
		<%= image_tag @user.gravatar_url(:size => 128) %>
	</div>
	<div class="money"><%= cny @user.money %></div>
</div>
<table>
	<tbody>
		<tr>
			<th><%= t 'serial_number' %>
			<th><%= t 'occur_time' %></th>
			<th><%= t 'excerpt' %></th>
			<th><%= t 'reason' %></th>
			<th><%= t 'type' %></th>
			<th><%= t 'amount' %></th>
			<th><%= t 'status' %></th>
		</tr>
<% @records.each do |record| %>
	<% if record.reason == "recharge" %>
		<tr>
			<td><%= record.sn %></td>
			<td><%= record.created_at.strftime("%Y-%m-%d %H:%M:%S").downcase %></td>
			<td><%= record.description %></td>
			<td><%= t record.reason %></td>
			<td><%= t record.io %></td>
			<td><%= cny record.amount %></td>
			<td><%= t record.status %></td>
		</tr>
	<% else %>
		<tr>
			<td><%= record.sn %></td>
			<td><%= record.created_at.strftime("%Y-%m-%d %H:%M:%S").downcase %></td>
			<td><%= record.description %></td>
			<td><%= t record.reason %></td>
			<td><%= t record.io %></td>
			<td><%= cny record.amount %></td>
			<td><%= t record.status %></td>
		</tr>
	<% end -%>
<% end -%>
	</tbody>
</table>